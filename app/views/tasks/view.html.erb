  <div class="container">
    <h1>Task Details</h1>

    <p><%= link_to("Edit Task", edit_task_path(@task), class: "btn btn-primary") %></p>

    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Title:</h5>
        <p class="card-text"><%= @task.title %></p>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-body">
        <h5 class="card-title">Details:</h5>
        <p class="card-text"><%= @task.details %></p>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-body">
        <h5 class="card-title">Completed:</h5>
        <p class="card-text"><%= @task.completed %></p>
      </div>
    </div>

    <a href="http://127.0.0.1:3000/tasks" class="btn btn-secondary mt-3">Back to list</a>
  </div>
