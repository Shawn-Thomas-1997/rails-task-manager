<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center">My Tasks</h1>
      <ul class="list-group">
        <% @tasks.each do |task| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="form-check">
              <%= check_box_tag "task_completed_#{task.id}", '1', task.completed, class: 'form-check-input' %>
              <%= label_tag "task_completed_#{task.id}", task.title, class: 'form-check-label' %>
            </div>
            <%= link_to "Delete", task_path(task),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: 'btn btn-danger btn-sm' %>
          </li>
        <% end %>
      </ul>
      <a class="my-link-class" href="http://127.0.0.1:3000/tasks/new">Create Task</a>
    </div>
  </div>
</div>
