
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @task, html: { class: 'form' } do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control form-control-sm' %>
        </div>

        <div class="mb-3">
          <%= f.label :description, class: 'form-label' %>
          <%= f.text_field :description, class: 'form-control form-control-sm' %>
        </div>

        <div class="mb-3">
          <%= f.label :completed, class: 'form-check-label' %>
          <div class="form-check">
            <%= f.check_box :completed, class: 'form-check-input' %>
          </div>
        </div>

        <div class="mb-3 text-center">
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
